<odoo>

    <record id="hr_union_view_form" model="ir.ui.view">
        <field name="name">hr.union.view.form</field>
        <field name="model">hr.union</field>
        <field name="arch" type="xml">
            <form string="HR Union">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="cost" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_union_view_tree" model="ir.ui.view">
        <field name="name">hr.union.view.tree</field>
        <field name="model">hr.union</field>
        <field name="arch" type="xml">
            <tree string="HR Union">
                <field name="name" />
                <field name="cost" />
            </tree>
        </field>
    </record>

    <record id="action_hr_union" model="ir.actions.act_window">
        <field name="name">HR Union</field>
        <field name="res_model">hr.union</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_union_menu" name="HR Union" parent="hr_config_peru" action="action_hr_union"/>

</odoo>
