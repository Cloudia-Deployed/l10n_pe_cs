<odoo>

    <record id="hr_union_plan_view_form" model="ir.ui.view">
        <field name="name">hr.union_plan.view.form</field>
        <field name="model">hr.union_plan</field>
        <field name="arch" type="xml">
            <form string="HR Union Plan">
                <sheet>
                    <group>
                      <field name="code" />
                      <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_union_plan_view_tree" model="ir.ui.view">
        <field name="name">hr.union_plan.view.tree</field>
        <field name="model">hr.union_plan</field>
        <field name="arch" type="xml">
            <tree string="HR Union Plan">
              <field name="code" />
              <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_hr_union_plan" model="ir.actions.act_window">
        <field name="name">HR Union Plan</field>
        <field name="res_model">hr.union_plan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_union_plan_menu" name="HR Union Plan" parent="hr_config_peru" action="action_hr_union_plan"/>

</odoo>
