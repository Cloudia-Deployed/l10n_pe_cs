<odoo>
    <record id="hr_contract_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="after">
                <page string="HR Planning">
                    <group>
                        <group>
                            <field name="plan_retirement" options="{'no_create_edit': True}"/>
                            <field name="plan_health" options="{'no_create_edit': True}"/>
                            <field name="plan_health_contribution" options="{'no_create_edit': True}"/>
                            <field name="plan_sctr" options="{'no_create_edit': True}"/>
                            <field name="plan_life" widget="many2many_tags" options="{'no_create_edit': True}"/>
                            <field name="plan_union" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="alw_transport"/>
                            <field name="alw_voucher"/>
                            <field name="withholding"/>
                            <field name="withholding_amount" attrs="{'invisible': [('withholding','!=','1')]}"/>
                            <field name="withholding_percentage" widget="percentage" attrs="{'invisible': [('withholding','!=','2')]}"/>
                            <field name="previous_income"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <menuitem id="hr_config_peru" name="Configurations for Peru" sequence='100' parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"/>

</odoo>
