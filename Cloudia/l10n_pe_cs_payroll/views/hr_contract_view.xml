<odoo>
    <record id="hr_contract_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="after">
                <page string="HR Planning">
                    <group>
                        <group>
                            <field name="plan_health"/>
                            <field name="plan_health_cost"/>
                            <field name="plan_retirement"/>
                            <field name="plan_health_contribution"/>
                            <field name="plan_union"/>
                        </group>
                        <group>
                            <field name="sctr"/>
                            <field name="previous_income"/>
                            <field name="plan_union"/>
                            <field name="commisions"/>
                            <field name="attendance_tracking"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <menuitem id="hr_config_peru" name="Configurations for Peru" parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"/>

</odoo>
