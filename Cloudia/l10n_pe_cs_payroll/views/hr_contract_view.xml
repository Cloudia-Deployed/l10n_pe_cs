<odoo>
    <record id="hr_contract_view_form_inherited" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherited</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='wage']" position="after">
                <label for="advance_wage_percentage"/>
                <div class="o_row" name="advance_wage">
                    <field name="advance_wage_percentage" nolabel="1"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
