<odoo>
    <data>
        <record id="hr_payroll.hr_salary_rule_worker_basic" model="hr.salary.rule">
            <field name="condition_select">python</field>
            <field name="condition_python">result = payslip.date_to.day == (payslip.date_to + relativedelta(months=+1,day=1,days=-1)).day</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.wage * (100 - contract.advance_wage_percentage)/100</field>
        </record>
        <record id="hr_salary_rule_worker_advance" model="hr.salary.rule">
            <field name="name">Advance Salary</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result=payslip.date_to.day == 15</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.wage * contract.advance_wage_percentage/100</field>
            <field name="code">ADV_SALARY</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="struct_id" ref="hr_payroll.structure_worker_001"/>
        </record>
        <record id="hr_salary_rule_worker_bonus" model="hr.salary.rule">
            <field name="name">Bonus</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.BONUS and payslip.date_to.day == 15 and payslip.date_from.month in [7, 12]</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.BONUS and inputs.BONUS.amount</field>
            <field name="code">BONUS</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="hr_payroll.structure_worker_001"/>
        </record>
        <record id="hr_salary_rule_worker_unemployment_insurance" model="hr.salary.rule">
            <field name="name">Unemployment Insurance</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.UNEMPLOYMENT_INSURANCE and payslip.date_to.day == 15 and payslip.date_from.month in [3, 11]</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.UNEMPLOYMENT_INSURANCE and inputs.UNEMPLOYMENT_INSURANCE.amount</field>
            <field name="code">UNEMPLOYMENT_INSURANCE</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="hr_payroll.structure_worker_001"/>
        </record>
    </data>
</odoo>
